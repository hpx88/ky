/* city.css */
li {
    display: list-item;
    text-align: inherit;
}

.top-in {
    opacity: 1;
    transform: translateY(0);
}

.city-wrap {
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.city-index, .city-wrap {
    transition: all .2s ease-out;
}

.city-title {
    position: absolute;
    z-index: 1002;
    top: 0;
    width: 100%;
    height: 45px;
    border-bottom: 1px solid #e9e9e9;
    font-size: 16px;
    line-height: 45px;
    text-align: center;
    color: #000;
    background: #fff;
}

.city-title .close {
    position: absolute;
    display: block;
    top: 0;
    right: 0;
    width: 40px;
    height: 40px;
    font-size: 29px;
    text-align: center;
    color: #777;
}

.city-list {
    box-sizing: border-box;
    padding: 46px 0 0;
    width: 100%;
    height: 100%;
    font-size: 12px;
    color: #777;
    background: #fff;
    overflow-x: hidden;
    overflow-y: scroll;
}

.city-list .city-category view {
    margin: 0;
    padding: 9px 12px;
    font-size: 12px;
    font-weight: bold;
    color: #777;
    background: #eee;
}

.city-list li navigator {
    display: block;
    border-bottom: 1px solid #e5e7e7;
    padding: 12px;
    font-size: 15px;
    text-decoration: none;
    color: #777;
    background: #fcfcfc;
    overflow: hidden;
}

.city-wrap .city-index.left-in {
    opacity: 1;
    transform: translate(0);
}

.city-wrap .city-index {
    z-index: 1001;
    position: absolute;
    top: 60px;
    right: 0;
    width: 40px;
    padding: 3px 0;
    border: 1px solid #ccc;
    background: hsla(0, 0%, 100%, .5)
}

.city-wrap .city-index li {
    list-style: none;
    float: left;
}

.city-wrap .city-index navigator {
    display: block;
    width: 40px;
    height: 22px;
    text-align: center;
    font-size: 12px;
    text-decoration: none;
    color: #a9a9a9;
}