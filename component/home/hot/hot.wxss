/* hot.css */

.movielist-wrapper {
  background: #fff;
}

.movie-info {
  display: flex;
  padding: 15px;
}

.picture {
  opacity: 1;
  transition: opacity 0.5s ease-in;
  background-image: url("https://gw.alicdn.com/i3/TB1nMiRgchmZKJjSZFPXXc5_XXa_.jpg_160x160Q75.jpg");
  width: 65px;
  height: 90px;
  /*display: block;*/
  background-position: 50%;
  background-size: cover;
  position: relative;
}

.picture .play-icon {
  position: absolute;
  width: 20px;
  height: 20px;
  top: 50%;
  left: 50%;
  margin-top: -10px;
  margin-left: -10px;
}

.movie-item-content {
  padding-left: 10px;
  padding-right: 10px;
  color: #000;
  flex: 1;
  width: 0;
}

.movie-item-content .title {
  display: flex;
  -webkit-box-align: center;
  font-weight: 500;
}

.movie-item-content .beief {
  width: auto;
  margin-top: 3px;
  font-size: 12px;
  color: #8a869e;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}

.movie-item-content .beief .film-star {
  margin-bottom: 4px;
}

.movie-item-content .beief .film-star .show-star-mod {
  overflow: hidden;
}

