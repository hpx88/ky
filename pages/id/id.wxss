/* pages/id/id.wxss */
.content{
    margin: 0px;
    padding: 0px;
    width: 99%;
    height: 800px;
    background: #EEE9E9;
    border: solid 1px #FFE1FF;
}
image{
    background:fixed center center no-repeat;
    background-size: cover;
    width: 100%;
}
.con_header{
    width: 90%;
    height: 200px;
    background: #FFFFFF;
    border: solid 1px #FFE1FF;
    margin: 20px auto;
}
.con_txt{
    width: 50%;
    height: 150px;
    float: left;
    font-weight: 600;
}
.con_txt text{
    line-height: 30px;
    margin-left: 20px;
    font-size: 14px;
    font-weight: 400;
    color: black;
}
.con_img{
    width: 40%;
    height: 150px;
    border: solid 1px #FFE1FF;
    position: relative;
    overflow: hidden;
    background-size: cover;
    z-index: 1;
}
.con_body{
    width: 100%;
    height: 100px;
    background: #FFFFFF;
    margin: 0 auto;
    border: solid 1px #FFE1FF;
}
.main_body{
    margin-left: 20px;
}
.body_item{
    width: 30%;
    height: 50px;
    border: solid 1px #FFE1FF;
    float: left;
    margin: 20px auto;
    line-height: 50px;
    text-align: center;
}
.con_floor{
    width: 100%;
    height: 400px;
    background: #FFFFFF;
    margin: 0 auto;
    margin-top: 40px;
    border: solid 1px #FFE1FF;
    text-align: center;
}