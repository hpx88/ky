/* pages/home/will/will.wxss */

.content {
  margin: 0;
  padding: 0;
  color: #333;
  font-size: 14px;
}

.btn-area {
  width: 100%;
  display: flex;
}

.btn-area navigator {
  flex: 1;
  padding: 5px;
  height: 40px;
  line-height: 40px;
  text-align: center;
}

.city {
  position: relative;
  display: inline-block;
}

.nav-hot {
  display: block;
  color: #ff4d64;
  border-bottom: 2px solid #ff4d64;
}

.logo {
  position: absolute;
  top: 15px;
  left: 20px;
  width: 20px;
  height: 20px;
  line-height: 40px;
}

.city-name {
  position: absolute;
  left: 60px;
}

.city-add {
  position: absolute;
  top: 20px;
  left: 110px;
  content: "";
  display: block;
  width: 6px;
  height: 6px;
  border: 1px solid #50505a;
  border-top: 0 none;
  border-left: 0 none;
  margin-left: 2px;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}

/*movielist-wrapper*/

.movielist-wrapper {
  background: #fff;
}

.movie-info {
  display: flex;
  padding: 15px;
}

.picture {
  opacity: 1;
  transition: opacity 0.5s ease-in;
  width: 65px;
  height: 90px;
  display: block;
  background-position: 50%;
  background-size: cover;
  position: relative;
}

.picture .play-icon {
  position: absolute;
  width: 20px;
  height: 20px;
  top: 50%;
  left: 50%;
  margin-top: -10px;
  margin-left: -10px;
}

.movie-item-content {
  padding-left: 10px;
  padding-right: 10px;
  color: #000;
  flex: 1;
  width: 0;
}

.movie-item-content .title {
  display: flex;
  -webkit-box-align: center;
  font-weight: 500;
}

.movie-item-content .beief {
  width: auto;
  margin-top: 3px;
  font-size: 12px;
  color: #8a869e;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}

.movie-item-content .beief .film-star {
  margin-bottom: 4px;
}

.movie-item-content .beief .film-star .show-star-mod {
  overflow: hidden;
}

