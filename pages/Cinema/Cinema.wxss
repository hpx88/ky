@import '../loading/loading.wxss';

.sticky-topbar.fixed {
  position: fixed;
  top: 0;
}

.sticky-topbar {
  z-index: 99;
  background: #fff;
  width: 100% !important;
}

.topbar {
  position: relative;
}

.cinema-list-layout, .topbar {
  background: #fff;
}

