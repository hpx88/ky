.topbar .topbar-mod .city-selector .j_cityName {
  display: inline-block;
  vertical-align: middle;
  height: 100%;
  line-height: 40px;
}

.topbar .topbar-mod .city-selector .selector-i-arrow {
  display: inline-block;
  margin-left: 2px;
  margin-bottom: 2px;
}

