.tab-mod {
  padding-top: 40px;
  font-size: 14px;
}

.cinema-list-layout.has-bottombar .tab-bd {
  padding-bottom: 80px;
  padding-top: 0;
}

 .cinema-list {
    font-size: 12px;
    line-height: 200%;
    padding-left: 12px;
    overflow: hidden;
} 

.cinema-list .list-item .list-item-in {
    position: relative;
    padding-top: 10px;
    padding-bottom: 9px;
    background: linear-gradient(0deg,#fff,#fff) 0 0 no-repeat,linear-gradient(180deg,#fff,#fff) 0 100% no-repeat,linear-gradient(0deg,#e5e5e5,#e5e5e5,hsla(0,0%,90%,0)) 0 0 no-repeat,linear-gradient(180deg,#e5e5e5,#e5e5e5,hsla(0,0%,90%,0)) 0 100% no-repeat,#fff;
    background-size: 100% 1px,0 1px,100% 1px,100% 1px;
}

.cinema-list .list-item .list-item-in .h3 {
    font-size: 12px;
    line-height: 18px;
    margin-bottom: 2px;
    font-weight: 600;
    color: #222227;
}

.cinema-list .list-item .list-item-in .h3 .list-title {
    display: inline-block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 165px;
    vertical-align: bottom;
}

.cinema-list .list-item .list-item-in .h3 .list-price {
    display: inline-block;
    line-height: 1;
    vertical-align: baseline;
    color: #ff4d64;
    margin-left: 8px;
    font-size: 9px;
    font-weight: 400;
}

.cinema-list .list-item .list-item-in .h3 .list-price span {
    color: #8a869e;
}

.cinema-list .list-item .list-item-in .list-address {
    line-height: 1.5;
    padding-right: 12px;
}

.cinema-list .list-item .list-item-in .list-location {
    width: 214px;
    color: #8a869e;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.cinema-list .list-item .list-item-in .list-status .label-mod {
    margin-left: 0;
    margin-right: 2px;
}

.label-mod.label-border-grey {
    display: inline-block;
    position: relative;
    padding-left: .3125rem;
    padding: .5vmin 1.3vmin;
    padding-right: .3125rem;
    padding-top: .125rem;
    padding-bottom: .125rem;
    line-height: 1;
    font-size: 9px;
    color: #7ab5e0;
}

