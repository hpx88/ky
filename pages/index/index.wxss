/* pages/id/id.wxss */
@import '../../component/login/login.wxss';
@import '../../component/home/city/city.wxss';
@import '../../component/home/video/video.wxss';
@import '../../component/home/swiper/swiper.wxss';
@import '../../component/home/hot/hot.wxss';
